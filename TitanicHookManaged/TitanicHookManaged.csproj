<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net20;net40</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>12</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <PlatformTarget>x86</PlatformTarget>
        <Prefer32Bit>true</Prefer32Bit>
    </PropertyGroup>

    <ItemGroup>
      <Reference Include="System.Windows.Forms" />
    </ItemGroup>

    <ItemGroup>
      <None Update="MinHook.x86.bin">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>
    
    <ItemGroup Condition="'$(TargetFramework)' == 'net20'">
        <PackageReference Include="LinqBridge" Version="1.3.0" />
    </ItemGroup>
    
    <ItemGroup>
        <ProjectReference Include="../Libraries/Harmony/Harmony/Harmony.csproj" />
        <ProjectReference Include="..\Libraries\ILReader\ILReader.csproj" />
    </ItemGroup>

</Project>
