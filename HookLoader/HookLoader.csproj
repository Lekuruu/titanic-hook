<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net20;net40</TargetFrameworks>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>13</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <PlatformTarget>x86</PlatformTarget>
      <Prefer32bit>true</Prefer32bit>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <PlatformTarget>x86</PlatformTarget>
      <Prefer32bit>true</Prefer32bit>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\TitanicHookManaged\TitanicHookManaged.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net20'">
      <PackageReference Include="LinqBridge" Version="1.3.0" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="System.Windows.Forms" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="ILMerge" Version="3.0.41" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="MinHook.x86.bin" LogicalName="MinHook.x86.bin" />
    </ItemGroup>
    
    <Target Name="ILMerge-net20" AfterTargets="Build" Condition="'$(Configuration)' == 'Release' And '$(TargetFramework)' == 'net20'">
        <Exec Command="&quot;$(PkgILMerge)\tools\net452\ILMerge.exe&quot; /targetplatform:v2,&quot;C:\Windows\Microsoft.NET\Framework\v2.0.50727&quot; /out:&quot;$(OutputPath)$(AssemblyName)_merged.exe&quot; &quot;$(OutputPath)$(AssemblyName).exe&quot; &quot;$(OutputPath)0Harmony.dll&quot; &quot;$(OutputPath)ILReader.dll&quot; &quot;$(OutputPath)TitanicHookManaged.dll&quot; &quot;$(OutputPath)LinqBridge.dll&quot;"/>
    </Target>

    <Target Name="ILMerge-net40" AfterTargets="Build" Condition="'$(Configuration)' == 'Release' And '$(TargetFramework)' == 'net40'">
        <Exec Command="&quot;$(PkgILMerge)\tools\net452\ILMerge.exe&quot; /targetplatform:v4,&quot;C:\Windows\Microsoft.NET\Framework\v4.0.30319&quot; /out:&quot;$(OutputPath)$(AssemblyName)_merged.exe&quot; &quot;$(OutputPath)$(AssemblyName).exe&quot; &quot;$(OutputPath)0Harmony.dll&quot; &quot;$(OutputPath)ILReader.dll&quot; &quot;$(OutputPath)TitanicHookManaged.dll&quot;"/>
    </Target>

</Project>
